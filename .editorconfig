; EditorConfig is awesome: http://EditorConfig.org

root = true
charset = utf-8

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

; Tab indentation (no size specified)
[*.js]
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2